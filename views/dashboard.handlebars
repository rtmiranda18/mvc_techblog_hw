<h1>Dashboard</h1>
<form action="/dashboard" method="POST">
    <div>
        <label>Title:</label>
        <input type="text" name="title" />
    </div>

    <div>
        <label>Content:</label>
        <textarea name="content"></textarea>
    </div>
    
    <div>
        <button type="submit">Add Blog</button>
    </div>
</form>
<div id="blogs">
    {{#each blogs}}
        <div class="blog">
            <a href="/blog/{{id}}">{{title}}</a>
            <p>{{content}}</p>
            <p>{{user.username}}</p>
            <p>{{formatDate createdAt "DD/MM/YYYY"}}</p>
        </div>
    {{else}}
        No Blogs Available!
    {{/each}}
</div>